<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Producto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/colorSecundaryText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/nomPro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_productos"
                            android:fontFamily="monospace"
                            android:hint="Nombre"
                            android:inputType="text"
                            android:maxLength="20"
                            android:textColor="@color/colorPrimaryText"
                            android:textColorHint="@color/colorSecundaryText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_horizontal_margin">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/desPro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_description"
                            android:fontFamily="monospace"
                            android:hint="DescripciÃ³n"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textColor="@color/colorPrimaryText"
                            android:textColorHint="@color/colorSecundaryText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/colorSecundaryText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/prePro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_money"
                            android:fontFamily="monospace"
                            android:hint="Precio"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorPrimaryText"
                            android:textColorHint="@color/colorSecundaryText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="145dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/activity_horizontal_margin">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/cantPro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_stock"
                                android:fontFamily="monospace"
                                android:hint="Cantidad"
                                android:inputType="number"
                                android:maxLength="11"
                                android:textColor="@color/colorPrimaryText"
                                android:textColorHint="@color/colorSecundaryText" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="94dp"
                            android:layout_height="121dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/burrito" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAtrasPro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="monospace"
                        android:text="Cancelar"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnGuarPro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="monospace"
                        android:text="Guardar"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/bottonNavBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            android:foregroundGravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="455dp">


            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/miPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Mi perfil"

                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/verProductos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Productos"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/nProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Nuevo Producto"
                    android:textSize="12sp" />


            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dynamicContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"

            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>

