<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editarProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/colorSecundaryText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/nomPro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_productos"
                            android:fontFamily="monospace"
                            android:hint="Nombre"
                            android:inputType="text"
                            android:maxLength="20"
                            android:textColor="@color/colorPrimaryText"
                            android:textColorHint="@color/colorSecundaryText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_horizontal_margin">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/desPro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_description"
                            android:fontFamily="monospace"
                            android:hint="DescripciÃ³n"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textColor="@color/colorPrimaryText"
                            android:textColorHint="@color/colorSecundaryText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:textColorHint="@color/colorSecundaryText">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/prePro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_money"
                            android:fontFamily="monospace"
                            android:hint="Precio"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorPrimaryText"
                            android:textColorHint="@color/colorSecundaryText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="145dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/activity_horizontal_margin">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/cantPro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_stock"
                                android:fontFamily="monospace"
                                android:hint="Cantidad"
                                android:inputType="number"
                                android:maxLength="11"
                                android:textColor="@color/colorPrimaryText"
                                android:textColorHint="@color/colorSecundaryText" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="94dp"
                            android:layout_height="121dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/burrito" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnBoPro"
                        android:layout_width="176dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Eliminar producto" />

                    <Button
                        android:id="@+id/btnGuarPro"
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="monospace"
                        android:text="Guardar"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
